{
  "id": "wordpress",
  "cpus": 0.5,
  "mem": 128,
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "BRIDGE",
      "image": "$image",
      "portMappings": [
        {
          "containerPort": 80,
          "servicePort": $port,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ]
    }
  },
  "env": {
    "WORDPRESS_DB_USER": "$db_user",
    "WORDPRESS_DB_PASSWORD": "$db_pass",
    "WORDPRESS_DB_NAME": "$db_name",
    "WORDPRESS_DB_HOST": "$db_host"
  }
}
