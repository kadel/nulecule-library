{
  "id": "etherpad-centos7",
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "BRIDGE",
      "image": "$image",
      "portMappings": [
        {
          "containerPort": 9001,
          "servicePort": $hostport,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ]
    }
  },
  "env": {
      "DB_HOST": "$db_host",
      "DB_DBID": "$db_name",
      "DB_PASS": "$db_pass",
      "DB_PORT": "3306",
      "DB_USER": "$db_user"

  },
  "cpus": 0.1,
  "mem": 256
}


